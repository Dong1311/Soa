generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  role        String
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  maCanBo     String?  @unique  // Khóa ngoại trỏ tới maCanBo của CanBo
  canBo       CanBo?   @relation("UserToCanBo", fields: [maCanBo], references: [maCanBo])
}

model KeHoachThuThap {
  id          Int      @id @default(autoincrement())
  soKeHoach   String   @unique
  tieuDe      String
  nguoiTao    String?
  nguoiDuyet  String?
  ngayTao     DateTime @default(now())
  noiDung     String?
  donViNopLuu String?
  ngayBatDau  DateTime?
  ngayKetThuc DateTime?
  taiLieuHD   String?
  trangThai   String

  hoSos       HoSo[]   // 1 Kế hoạch thu thập có nhiều Hồ sơ
  taiLieuHuongDan  TaiLieuHuongDan?
  
}

model TaiLieuHuongDan {
  id               Int              @id @default(autoincrement()) // Mã tài liệu
  tenTaiLieu       String           // Tên tài liệu
  ngayTao          DateTime         @default(now())               
  link             String           // Link dẫn tới tài liệu
  keHoachThuThap   KeHoachThuThap?  @relation(fields: [keHoachThuThapId], references: [id]) // Quan hệ với Kế hoạch thu thập
  keHoachThuThapId Int?              @unique // Đảm bảo mỗi kế hoạch chỉ có một tài liệu hướng dẫn
  ghiChu           String?
}

model HoSo {
  id                   Int      @id @default(autoincrement())
  maHoSo               String   @unique
  maDinhDanhCoQuan     String
  mucLucSoNamHS        String
  soVaKyHieuHoSo       String
  tieuDeHoSo           String
  thoiHanBaoQuan       String
  cheDoSuDung          String?
  ngonNgu              String
  ngayBatDau           DateTime?
  ngayKetThuc          DateTime?
  chuGiai              String?
  kyHieuThongTin       String?
  tuKhoa               String?
  tinhTrangVatLy       String
  trangThai            String
  nguoiTao             String?      
  ngayTao              DateTime @default(now())
  keHoachThuThapId     Int
  tongSoTaiLieu        Int?
  tongSoTrang          Int?
  donViNopLuu          String?

  keHoachThuThap       KeHoachThuThap @relation(fields: [keHoachThuThapId], references: [id]) // Quan hệ với Kế hoạch thu thập
  taiLieus             TaiLieu[]      // 1 Hồ sơ có nhiều Tài liệu
}

model TaiLieu {
  id                 Int      @id @default(autoincrement())
  tenTaiLieu       String           // Tên tài liệu
  ngayTao          DateTime         @default(now())
  khungBienMuc       String
  maDinhDanhVanBan   String   @unique
  hoSoId             Int
  hoSo               HoSo     @relation(fields: [hoSoId], references: [id]) // Quan hệ với Hồ sơ
  sttTrongHoSo       Int
  tenLoaiVanBan      String
  soVanBan           String
  kyHieuTaiLieu      String
  ngayThangNamVB     DateTime
  tenCoQuanBanHanh   String
  trichYeuNoiDung    String
  ngonNgu            String
  soLuongTrang       Int
  ghiChu             String?
  kyHieuThongTin     String?
  tuKhoa             String?
  cheDoSuDung        String
  mucDoTinCay        String
  butTich            String?
  tinhTrangVatLy     String
  link               String?
}

model BienBanBanGiao {
  id                Int      @id @default(autoincrement())
  soBienBan         String
  tieuDe            String
  ngayLap           DateTime
  canCu            String
  tenCoQuanThuThap  String
  donViNopLuu       String
  daiDienBenGiao    String
  daiDienBenNhan    String
  thoiGianHSTL      DateTime?
  tinhTrangVatLy    String
  trangThaiBienBan  String
}

model LichSuChinhSua {
  id              Int      @id @default(autoincrement())
  maHoatDong      Int
  maHoSo          Int
  maTaiLieu       Int
  nguoiThucHien   String
  thoiGianThucHien DateTime
}

model PhieuYeuCau {
  id               Int      @id @default(autoincrement())
  soPhieu          String
  loaiHinhKhaiThac String
  ngayYeuCau       DateTime
  nguoiKhaiThac    String
  nguoiDuyet       String
  doiTuongKhaiThac String
  mucDichKhaiThac  String
  khaiThacTuNgay   DateTime
  khaiThacDenNgay  DateTime
  hinhThucKhaiThac String
  loaiHoatDong     String
  noiDungYeuCau    String
  ghiChu           String?
  trangThai        String
}

model PhieuTra {
  id               Int      @id @default(autoincrement())
  soPhieu          String
  soPhieuYeuCau    String
  ngayTao          DateTime
  nguoiTao         String
  trangThai        String
}

model QuyDinhTieuHuy {
  id               Int      @id @default(autoincrement())
  qdSo             String
  tieuDeQuyetDinh  String
  ngayTao          DateTime
  nguoiDuyet       String
  nguoiTao         String
  noiDungTieuHuy   String
  lyDoTieuHuy      String
  trangThai        String
}

model DonViNopLuu {
  id               Int      @id @default(autoincrement())
  maDonVi          String
  tenDonVi         String
  diaChi           String
  ghiChu           String?
}

model PhongBan {
  id               Int      @id @default(autoincrement())
  maPhongBan       String
  tenPhongBan      String
  maDonVi          String
  ghiChu           String?
  chucNang         String?
  nhiemVu          String
}

model CanBo {
  id           Int      @id @default(autoincrement())
  maCanBo      String   @unique // Trường maCanBo là duy nhất, khóa ngoại tham chiếu từ bảng User
  maDonVi      String
  chucVu       String
  ghiChu       String?
  tenCanBo     String
  email        String
  maPhongBan   String
  maCBQL       String?
  user         User?    @relation("UserToCanBo")
}
model Kho {
  id               Int      @id @default(autoincrement())
  maKho            String
  tenKho           String
  diaChiKho        String
  ghiChu           String?
}

model PhongLuuTru {
  id               Int      @id @default(autoincrement())
  maPhongLuuTru    String
  tenPhongLuuTru   String
  coQuanBanHanh    String
  ghiChu           String?
}

model DanhSachMucLuc {
  id               Int      @id @default(autoincrement())
  mucLucSohoacNamHS    String
  maPhongLuuTru   String
  ghiChu           String?
}
